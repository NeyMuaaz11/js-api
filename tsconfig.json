{
  "compilerOptions": {
      /* Language and Environment */
    "target": "es2020",                                  
    "moduleResolution": "nodenext",                     
    "sourceMap": true,                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "test"]
}